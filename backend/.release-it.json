{
    "git": {
        "requireBranch": "main"
    },
    "hooks": {
        "before:init": [
            "git pull",
            "npm run lint",
            "npm run test"
        ],
        "after:bump": "npx auto-changelog -p"
    },
    "github": {
        "release": true
    },
    "npm": {
        "publish": true
    }
}