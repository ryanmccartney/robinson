{
  "name": "robinson-backend",
  "version": "0.0.2",
  "description": "Backend for Robinson project",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "development": "nodemon index",
    "production": "node index",
    "docs": "node ./utils/markdown && swagger-markdown --force-version 2 -i ./../docs/api.yml  -o ./../docs/api.md",
    "lint": "eslint",
    "release": "release-it",
    "changelog": "auto-changelog -p --output './../CHANGELOG.md' --commit-limit false",
    "format": "prettier --write '**/*.js'"
  },
  "author": "Ryan McCartney",
  "license": "GPLv3",
  "dependencies": {
    "connect-mongodb-session": "^5.0.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-openapi-validator": "^5.3.5",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "isbn3": "^1.1.51",
    "md5": "^2.3.0",
    "module-alias": "^2.2.3",
    "mongodb": "^6.3.0",
    "mongoose": "^8.1.3",
    "nanoid": "^3.3.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "serve-favicon": "^2.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "swagger-markdown": "^2.3.0"
  },
  "nodemonConfig": {
    "ignore": [
      "./public/*",
      "./data/*",
      "./docs/*"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@bin": "./bin/",
    "@routes": "./routes/",
    "@models": "./models/",
    "@utils": "./utils/",
    "@services": "./services/",
    "@validators": "./validators/"
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "requireCleanWorkingDir": false,
      "tagName": "v${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "npm run format",
        "npm run lint",
        "npm run test"
      ],
      "after:bump": [
        "npm run changelog",
        "git add ./../CHANGELOG.md"
      ]
    },
    "github": {
      "release": true,
      "releaseName": "Release v${version}",
      "autoGenerate": true
    },
    "npm": {
      "publish": false
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false
  }
}
